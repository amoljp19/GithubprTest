<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".RequestIssues">

    <android.support.design.widget.TextInputLayout
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="153dp" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginBottom="67dp"
            app:layout_constraintBottom_toTopOf="@+id/textInputLayout" app:layout_constraintVertical_bias="0.36"
            app:layout_constraintHorizontal_bias="0.52" android:id="@+id/company_name"
            android:hint=""
            app:errorTextAppearance="@style/TextAppearance.AppCompat">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization Name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout" tools:ignore="MissingConstraints"
            android:orientation="vertical" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="276dp"
            android:layout_marginEnd="8dp" android:hint=""
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repository Name" android:id="@+id/repository_name"/>
    </android.support.design.widget.TextInputLayout>


    <Button
            android:text="Open Issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOpenIssues" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
            app:layout_constraintHorizontal_bias="0.17"/>
    <Button
            android:text="Close Issues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCloseIssues" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/buttonOpenIssues" android:layout_marginStart="24dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toBottomOf="@+id/textInputLayout"/>
</android.support.constraint.ConstraintLayout>